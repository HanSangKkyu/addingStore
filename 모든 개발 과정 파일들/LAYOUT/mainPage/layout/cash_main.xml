<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/upper_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#7b3b80">
        <ImageView
            android:src="@drawable/menu"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:text="ADDING STORE"
            android:textSize="27sp"
            android:fontFamily="monospace"
            android:shadowRadius="25.0"
            android:shadowColor="#ee74f7"
            android:textColor="#fae7fa"
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="80dp" />
        <ImageView
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content_up"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/cash"
            android:layout_marginTop="120dp"
            android:layout_width="230dp"
            android:layout_height="230dp" />
        <TextView
            android:textColor="#000"
            android:text="안녕하세요 지율님"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:textColor="#a3a3a3"
            android:layout_marginTop="20dp"
            android:text="당신이 좋아하는것에 투자해보세요"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#7B3B7F"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/charge"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:text="충전하기"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="#fae7fa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#79157F"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/refund"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:text="환급받기"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="#fae7fa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/cash_report"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:text="충전 및 환급 내역 확인하기"
                android:textColor="#666565"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>